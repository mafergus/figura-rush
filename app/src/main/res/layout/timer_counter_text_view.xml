<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/timerCounterTextViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/timerCounterTextViewPoint"
        android:fontFamily="@font/josefinsansbold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/timerCounterTextViewPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/josefinsansbold"
        android:text="." />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/timerCounterTextViewRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/timerCounterTextViewPoint"
        android:fontFamily="@font/josefinsansbold" />

</RelativeLayout>