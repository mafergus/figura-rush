<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.phoenixunknownapps.figurarushextreme.BasicGame
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.phoenixunknownapps.figurarushextreme.PracticeGame
        android:id="@+id/practiceGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/startOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/BackgroundColor"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="467dp"
            android:layout_height="117dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/figura_rush_text" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/trainMagicStartButton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button"
                android:text="@string/play"
                android:textSize="28sp" />

            <Button
                android:id="@+id/highScores"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/trainMagicStartButton"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button"
                android:text="@string/high_scores"
                android:textSize="28sp" />

            <Button
                android:id="@+id/practice"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/highScores"
                android:background="@drawable/button"
                android:text="@string/share"
                android:textSize="28sp" />


            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/practice"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/highScoreOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BackgroundColor"
        android:visibility="gone">

        <TextView
            android:id="@+id/gameEndedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="40sp" />

        <RelativeLayout
            android:id="@+id/highScoreContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/gameEndedTitle"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/highScoreTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/highScoreText"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/score_label"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/highScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/DarkGreen"
                android:textSize="70sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gameTimeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/highScoreContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/gameTimeTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/game_time_label"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/gameTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/RosyBrown"
                android:textSize="40sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/startButton2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_above="@+id/highScores2"
            android:layout_centerInParent="true"
            android:background="@drawable/button"
            android:text="@string/play"
            android:textSize="28sp" />

        <Button
            android:id="@+id/highScores2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_above="@+id/practice2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="@string/high_scores"
            android:textSize="28sp" />

        <Button
            android:id="@+id/practice2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="@string/share"
            android:textSize="28sp" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/practice2"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp" />
    </RelativeLayout>

</RelativeLayout>